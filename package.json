{
  "name": "twvm",
  "version": "0.0.1",
  "description": "A tiny and efficient WebAssembly virtual machine.",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "bash bin/build.sh",
    "test": "npm-run-all \"build -- --test\"",
    "lint": "cpplint --counting=total --root=. --recursive --linelength=100 --extensions=cc,h .",
    "memcheck": "npm run build && valgrind --leak-check=full --show-leak-kinds=all build/twvm",
    "clear": "make clean && rm -rf CMakeCache.txt && rm -rf cmake_install.cmake && rm -rf CMakeFiles/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Becavalier/TWVM.git"
  },
  "keywords": [
    "WebAssembly",
    "VM"
  ],
  "author": "YHSPY",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Becavalier/TWVM/issues"
  },
  "homepage": "https://github.com/Becavalier/TWVM#readme"
}
